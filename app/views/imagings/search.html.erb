<%= form_with(url: search_imagings_path, method: :get, html: {id: "contrast-search-form"}) do |form| %>
  <div class="headline">信号値から探す</div>

  <table border="2" bordercolor="#f0e4e4" height="70" >
    <div class="signal">
      <tr>
        <td><div class = "signal-headline">高信号</div></td>
        <td><div class = "signal-headline">低信号</div></td>
      </tr>
        
      <tr>
        <td>
          <% @heights.each do |height| %>
            <div class="signal-contrasts">
              <%= form.check_box :height_ids, { multiple: true, style: 'display: none;' }, height.id, nil %>
              <%= height.name %>
            </div>
          <% end %>
        </td>
        <td>
          <% @lows.each do |low| %>
            <div class="signal-contrasts">
              <%= form.check_box :low_ids, { multiple: true, style: 'display: none;' }, low.id, nil %>
              <%= low.name %>
            </div>
          <% end %>
        </td>
      </tr>
    </div>
  </table>
  <%= form.submit "検索", id: "search-submit_btn", class: "search-contrast-btn", style: 'display: none;' %>
<% end %>

<br>
<div id="search-results">
  <div class = "headline">Results:</div>
    <div id="search-contrast-results" data-occupation-id="<%= @occupation_id %>">
      <%= render @search_imagings %>
    </div>
  </div>
<br>
