使用機器登録
<%= form_with model: [@occupation, @machine], class: 'registration-main', local: true do |f| %>
<%= f.hidden_field :occupation_id, value: @occupation.id %>
  <br><br><div class='form-wrap'>
    <div class="form-group">
      <div class='form-text-wrap'>
      <label class="form-text">使用装置</label>
      </div>
      <div class='form-text-wrap'>
      <label class="form-text">メーカー</label>
      </div>
      <%= f.collection_select(:manufacturer_id, Manufacturer.all, :id, :name, {include_blank: "---"}, {class:"select-box", id:"manufacturer"}) %>
      <div class='form-text-wrap'>
      <label class="form-text">静磁場強度</label>
      </div>
      <%= f.collection_select(:strength_id, Strength.all, :id, :name, {include_blank: "---"}, {class:"select-box", id:"strength"}) %>
      <div class='form-text-wrap'>
      <label class="form-text">装置名</label>
      </div>    
      <%= f.text_area :name, class:"input-default", id:"machine" %>
    </div>

    <div class='register-btn'>
      <%= f.submit "使用機器登録" ,class:"registration-text" %>
    </div>
  </div>
<% end %>