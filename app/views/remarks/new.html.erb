
<%= form_with model: [@occupation, @imaging, @remark], url: imaging_remarks_path, class: 'registration-main', local: true do |f| %>
<%= render 'shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :content, "備考", for: "remark-content" %><br>
    <%= f.text_area :content, class: :form__text, id:"remark-content", class: "imaging-text" %>
  </div>
    <div class='register-btn'>
      <%= f.submit "登録" ,class:"registration-text" %>
    </div>
  </div>
<% end %>