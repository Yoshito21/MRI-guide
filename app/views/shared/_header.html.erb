<header class='top-page-header'>
  <div class='nav'>
    <% if user_signed_in? %>
        <%= link_to "MRI guide", root_path(id: current_user.id), class: "header-title" %>
      <ul class='lists-header'>
        <div class="header-user">
          <li><%= link_to current_user.nickname, user_path(id: current_user.id), class: "header-nickname" %></li>
          <% if current_user.occupation.present? %>
            <li><%= link_to current_user.occupation.name, occupation_path(current_user.occupation.id), class: "header-occupation" %></li>
          <% else %>
            <li><%= link_to '所属施設登録', occupations_path %></li>
          <% end %>
        <div class="menu-icon">
        <div class="menu">
          <li><%= link_to '信号値で検索', search_imagings_path, method: :get, class: "contrast-search" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        </div>
        </div>
      </div>
    <% else %>
      <div class = "devise-header">
        <div class= "devise-title">
        MRI guide
      </div>
      </div>
    <% end %>
  </div>
</header>